extends layout

block content
    section.title-with-photo
        .page-title
            
    <div class="container-login">
        <form method="POST" action="/login">
        <div class="auth-form">
            <p><input name="loginField" type="text" placeholder="Login"></p>
            <p><input name="passField" type="password" placeholder="Password"></p>
            <div class="buttons-login">
                <button class="btnLogin" type="submit" id="sendbtn">Войти</button>
                <button class="btnReg" type="submit" id="sendbtn" name="regBtn" value="true">Регистрация</button>
            </div>
        </div>
        </form>